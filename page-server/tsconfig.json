{
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./dist",
      "target": "es6",
      "lib": [
        "dom",
        "dom.iterable",
        "es2017",
        "esnext"
      ],
      "declaration": true,
      "composite": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true
    }
  }